<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.studentdao">
  <insert id="add">
    insert into student(id,name,birth,clazz_id)values(#{id},#{name},#{birth},#{clazzId});
  </insert>
  <select id="list1" resultType="org.example.entity.student">
    select id,name,birth,clazz_id from student
  </select>
  <select id="list2" resultType="org.example.entity.student">
#     select id,name,birth,clazz_id from student limit #{pageNo},#{pageSize}
    # select s.id ,s.name ,s.birth ,c.name from student s left join clazz c on c.id= s.clazz_id
</select>
  <select id="count" resultType="java.lang.Integer">
    select count(*) from student
  </select>
</mapper>